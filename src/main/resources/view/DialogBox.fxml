<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Label for text bubble -->
        <Label fx:id="dialog" minHeight="-Infinity" style="-fx-background-color: #10B48E; -fx-padding: 10px; -fx-background-radius: 10px;" text="Label" textFill="#f2fbff" wrapText="true" />

        <!-- ImageView for profile picture -->
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle fx:id="clipCircle" centerX="30.0" centerY="30.0" radius="30.0" />
            </clip>
        </ImageView>
    </children>

    <!-- Increase padding to prevent clipping -->
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>

