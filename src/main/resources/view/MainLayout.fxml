<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bing.MainLayout">
    <children>
        <ScrollPane fx:id="scrollPane" prefHeight="500.0" prefWidth="400.0" hbarPolicy="NEVER" vbarPolicy="ALWAYS">
            <content>
                <VBox fx:id="dialogContainer" prefHeight="500.0" prefWidth="400.0" VBox.vgrow="ALWAYS"/>
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" layoutY="520.0" layoutX="50.0" prefHeight="30.0" prefWidth="280.0"/>
        <Button fx:id="sendButton" layoutX="340.0" layoutY="520.0" mnemonicParsing="false" text="Send" onAction="#handleUserInput"/>
    </children>
</AnchorPane>
