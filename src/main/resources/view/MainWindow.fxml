<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jeriel.ui.MainWindowController">
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
        <content>
            <VBox fx:id="dialogContainer" spacing="10.0"/>
        </content>
    </ScrollPane>
    <TextField fx:id="userInput" prefWidth="600.0"/>
    <Button text="Send" onAction="#handleUserInput"/>
</VBox>
