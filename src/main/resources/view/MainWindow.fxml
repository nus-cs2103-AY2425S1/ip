<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #f4f4f4;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agave.GUI.MainWindow">

    <TextField fx:id="userInput"
               layoutY="558.0"
               onAction="#handleUserInput"
               prefHeight="41.0"
               prefWidth="324.0"
               AnchorPane.bottomAnchor="10.0"
               AnchorPane.leftAnchor="10.0"
               promptText="Type your message..."
               style="-fx-background-color: white; -fx-font-size: 14px; -fx-border-radius: 15px;
                      -fx-border-color: #ccc;"/>

    <Button fx:id="sendButton"
            layoutX="324.0"
            layoutY="558.0"
            mnemonicParsing="false"
            onAction="#handleUserInput"
            prefHeight="41.0"
            prefWidth="76.0"
            text="Send"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 20px;"
            AnchorPane.bottomAnchor="10.0"
            AnchorPane.rightAnchor="10.0">
    </Button>

    <ScrollPane fx:id="scrollPane"
                hbarPolicy="NEVER"
                vbarPolicy="ALWAYS"
                fitToWidth="true"
                prefHeight="500.0"
                prefWidth="400.0"
                style="-fx-background-color: transparent;"
                AnchorPane.topAnchor="10.0"
                AnchorPane.bottomAnchor="60.0"
                AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0">
        <VBox fx:id="dialogContainer"
              spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 15px;"
              prefHeight="552.0"
              prefWidth="388.0"
              VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </VBox>
    </ScrollPane>

</AnchorPane>
